{
  "manifest_version": 2,
  "name": "JIRA Standup Mode",
  "version": "2.0.0",
  "description": "Enables standup mode on fullscreen",
  "browser_action": {
    "default_icon": "icon_16.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "css": ["dist/css/content.css", "dist/css/standup.css"],
      "js": ["dist/js/better-jira.js"],
      "matches": ["https://*.atlassian.net/*"]
    }
  ],
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": ["<all_urls>", "https://*.atlassian.net/*", "storage", "tabs", "activeTab"],
  "update_url": "https://clients2.google.com/service/update2/crx"
}
